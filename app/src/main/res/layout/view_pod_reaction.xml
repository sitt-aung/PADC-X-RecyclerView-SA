<?xml version="1.0" encoding="utf-8"?>
<com.padcmyanmar.padcx.padc_x_recyclerview_ypst.veiws.viewpods.ReactionViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.mmtextview.components.MMTextView
        android:id="@+id/tvLikedUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="366"
        android:gravity="center"
        android:drawablePadding="8dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:drawableTint="@color/colorAccent"
        android:drawableLeft="@drawable/ic_thumb_up_black_24dp"/>

    <org.mmtextview.components.MMTextView
        android:id="@+id/tvCommentedUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90"
        android:gravity="center"
        android:drawablePadding="8dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:drawableTint="@color/colorAccent"
        android:layout_toStartOf="@id/tvSharedUser"
        android:layout_marginEnd="12dp"
        android:drawableLeft="@drawable/ic_comment_black_24dp"/>

    <org.mmtextview.components.MMTextView
        android:id="@+id/tvSharedUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21"
        android:gravity="center"
        android:drawablePadding="8dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:drawableTint="@color/colorAccent"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/ic_share_black_24dp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tvSharedUser"
        android:background="@android:color/darker_gray"
        android:layout_margin="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/divider">
        
        <org.mmtextview.components.MMTextView
            android:id="@+id/tvLike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Like"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_thumb_up_black_24dp"/>

        <org.mmtextview.components.MMTextView
            android:id="@+id/tvComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comment"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_comment_black_24dp"/>

        <org.mmtextview.components.MMTextView
            android:id="@+id/tvShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_share_black_24dp"/>


    </LinearLayout>

</com.padcmyanmar.padcx.padc_x_recyclerview_ypst.veiws.viewpods.ReactionViewPod>